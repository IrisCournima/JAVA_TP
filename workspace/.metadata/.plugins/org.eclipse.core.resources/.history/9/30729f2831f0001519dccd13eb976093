		List<Conge> listConges=new ArrayList<>();
		 Conge conge=null;
		 try {

		 state = conn.createStatement();
		 result = state.executeQuery("SELECT * FROM client");
		 while (result.next()) {
		 client=new Client();
		 client.setId(result.getInt("id"));
